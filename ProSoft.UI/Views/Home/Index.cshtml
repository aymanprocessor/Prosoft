@section Scripts{
    <script>

        function filterAppointments(range) {
            fetch(`/Home/FilterClinicTrans?range=${range}`)
                .then(response => response.json())
                .then(data => renderTable(data))
                .catch(error => console.error('Error fetching appointments:', error));
        }

        // Function to render the table
    function renderTable(data) {
        const tbody = document.querySelector("#appointmentsTable tbody");
        tbody.innerHTML = ""; // Clear existing rows

        data.forEach(appointment => {
            const row = `<tr>
                <td>${appointment.patientName}</td>
                        <td>${appointment.date}</td>
                <td>${appointment.doctor}</td>
            </tr>`;
            tbody.insertAdjacentHTML("beforeend", row);
        });
    }

    // Initial load (show today's appointments by default)
    filterAppointments('today');


        // Data for the chart
        const data = {
            labels: ['الإثنين', 'الثلاثاء', 'الأربعاء', 'الخميس', 'الجمعة', 'السبت', 'الأحد'],
            datasets: [{
                label: 'عدد المواعيد',
                data: [12, 19, 8, 15, 10, 7, 14], // Example data
                borderColor: '#4CAF50', // Green line color
                backgroundColor: 'rgba(75, 192, 192, 0.2)', // Fill color
                borderWidth: 3,
                pointBackgroundColor: '#4CAF50', // Point color
                pointRadius: 5,
                pointHoverRadius: 7,
                fill: true, // Fill area under the line
                tension: 0.4, // Smoothness of the line
            }]
        };

        // Configuration for the chart
        const config = {
            type: 'line', // Type of chart (line, bar, pie, etc.)
            data: data,
            options: {
                responsive: true,
                maintainAspectRatio: false, // Allow custom height
                scales: {
                    y: {
                        beginAtZero: true, // Start y-axis from 0
                        title: {
                            display: true,
                            text: 'عدد المواعيد',
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        },
                        grid: {
                            color: '#e0e0e0', // Light gray grid lines
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'أيام الأسبوع',
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        },
                        grid: {
                            color: '#e0e0e0', // Light gray grid lines
                        }
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        text: 'المواعيد الأسبوعية للمرضى',
                        font: {
                            size: 18,
                            weight: 'bold'
                        }
                    },
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: {
                                size: 14
                            }
                        }
                    }
                }
            }
        };

        // Render the chart
        const appointmentChart = new Chart(
            document.getElementById('appointmentChart'),
            config
        );
    </script>
