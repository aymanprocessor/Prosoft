@model UserLoginDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
    Layout = null; // Temporarily remove layout for debugging
    SelectList users = new SelectList(Model.users, "UserCode", "UserName");
}
@inject IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Boxicons for icons -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <style>
        /* Custom background color for medical theme */
        body {
            background: linear-gradient(135deg, #e0f7fa, #80deea); /* Light blue gradient */
            height: 100vh;
            margin: 0;
        }
    </style>
</head>
<body class="d-flex align-items-center">
    <div class="container justify-items-center " style="width:400px;">
        <form method="post" asp-action="Login" class="bg-white p-4 rounded shadow" style="max-width: 400px;">
            <h2 class="text-center mb-4" style="color: #00796b;">@localizer["User Login"]</h2>
            <div class="mb-3">
                <label asp-for="UserCode" class="form-label" style="color: #004d40;">@localizer["User Name"]</label>
                <select asp-for="UserCode" asp-items="users" class="form-control text-center" style="border-color: #b2dfdb;">
                    <option value="">@localizer["Choose User"]</option>
                </select>
                <span asp-validation-for="UserCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PassWord" class="form-label" style="color: #004d40;">@localizer["Password"]</label>
                <div class="input-field position-relative">
                    <input asp-for="PassWord" class="form-control" type="password" style="border-color: #b2dfdb;" />
                    <i class="bx bx-hide show-hide position-absolute top-50 end-0 translate-middle-y me-2" style="color: #00796b; cursor: pointer;"></i>
                </div>
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="rememberMe" class="form-check-input" style="border-color: #b2dfdb;" />
                <label asp-for="rememberMe" class="form-check-label" style="color: #004d40;">@localizer["Remember Me"]</label>
                <span asp-validation-for="rememberMe" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn" style="background-color: #00796b; color: white;">@localizer["Login"]</button>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle password visibility
        const eyeIcons = document.querySelectorAll(".show-hide");

        eyeIcons.forEach((eyeIcon) => {
            eyeIcon.addEventListener("click", () => {
                const pInput = eyeIcon.parentElement.querySelector("input");
                if (pInput.type === "password") {
                    eyeIcon.classList.replace("bx-hide", "bx-show");
                    pInput.type = "text";
                } else {
                    eyeIcon.classList.replace("bx-show", "bx-hide");
                    pInput.type = "password";
                }
            });
        });
    </script>
</body>
</html>