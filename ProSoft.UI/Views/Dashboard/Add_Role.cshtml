@model RoleDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Role";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@inject IViewLocalizer localizer

<div class="container pt-2">
    <h1 class="mt-4">@localizer["New Role"]</h1>
    <form method="post" asp-action="Add_Role">
        <div class="border p-3 mt-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 mx-auto roleInput" >
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="parent d-flex justify-content-md-center" >
                <button type="submit" class="btn btn-primary" style="width:150px">@localizer["Add New"]</button>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    @* script for make click on sidebar when opent content*@
    <script>
        let ss = document.querySelector(".roles");
        ss.classList.add("active-link");
    </script>
}