@model LabReportDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Lab Reports";
    Layout = "_LayoutMedicalRecords";
}
<div class="container pt-2 internal-scroll">
    <h1 class="mt-4">Lab Reports</h1>
    <form method="post" asp-action="Add_LabReport">
        <div class="border p-3 mt-4">

            @* Hidden Inputs *@
            <input asp-for="PatId" type="hidden" value="@ViewBag.patID" />
            <input asp-for="PatSsn" type="hidden" value="@ViewBag.nationalID" />

            <div asp-validation-summary="ModelOnly"></div>
            <div class="parent d-flex align-items-md-end justify-content-center  my-mobile ">
                <div class="mb-3 me-md-4">
                    <label>Pt Name</label>
                    <input class="form-control" value="@ViewBag.patName" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="PatSsn">Patient SSN</label>
                    <input asp-for="PatSsn" type="number" class="form-control" value="@ViewBag.nationalID" disabled />
                    <span asp-validation-for="PatSsn" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------->
            @*  <div class="parent d-flex align-items-md-end justify-content-center reverse">
            <div class="mb-3 me-md-4">
            <label asp-for="SerialHistory">Serial</label>
            <input asp-for="SerialHistory" class="form-control" />
            <span asp-validation-for="SerialHistory" class="text-danger"></span>
            </div>

            </div> *@
            <!------------------------------------------------------------------------------------>
            <div class="parent d-flex align-items-md-end justify-content-center  my-mobile ">
                <div class="mb-3 me-md-4 me-auto" style="width: 60%">
                    <label asp-for="EntryDate">Date</label>
                    <input asp-for="EntryDate" type="date" class="form-control" />
                    <span asp-validation-for="EntryDate" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Trop">Trop</label>
                    <input asp-for="Trop" type="number" class="form-control" />
                    <span asp-validation-for="Trop" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Ckmb">CKMB</label>
                    <input asp-for="Ckmb" type="number" class="form-control" />
                    <span asp-validation-for="Ckmb" class="text-danger"></span>
                </div>
            </div>

            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Ldh">LDH</label>
                    <input asp-for="Ldh" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Ldh" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Hb">Hb</label>
                    <input asp-for="Hb" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Hb" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Platelet">Platelet</label>
                    <input asp-for="Platelet" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Platelet" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Wbcs">WBCS</label>
                    <input asp-for="Wbcs" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Wbcs" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Bil">Bil</label>
                    <input asp-for="Bil" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Bil" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Alt">ALT</label>
                    <input asp-for="Alt" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Alt" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Ast">AST</label>
                    <input asp-for="Ast" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Ast" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Alb">Alb</label>
                    <input asp-for="Alb" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Alb" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Ldl">LDL</label>
                    <input asp-for="Ldl" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Ldl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Hdl">HDL</label>
                    <input asp-for="Hdl" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Hdl" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Tg">TG</label>
                    <input asp-for="Tg" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Tg" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Cholesterol">Cholesterol</label>
                    <input asp-for="Cholesterol" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Cholesterol" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="CrBeforeAngioplasty">Cr BeforeAngioplasty</label>
                    <input asp-for="CrBeforeAngioplasty" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="CrBeforeAngioplasty" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Cr48HAfterAngioplasty">Cr 48 H After Angioplasty</label>
                    <input asp-for="Cr48HAfterAngioplasty" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Cr48HAfterAngioplasty" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
