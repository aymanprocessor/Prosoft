                    <label asp-for="Na">Na</label>
                    <input asp-for="Na" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Na" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Mg">Mg</label>
                    <input asp-for="Mg" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Mg" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Ca">Ca</label>
                    <input asp-for="Ca" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Ca" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>
            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="HcvAb">Hcv Ab</label>
                    <select asp-for="HcvAb" class="form-control text-center">
                        <option value="0">trop</option>
                        <option value="+ ve">+ ve</option>
                        <option value="- ve">- ve</option>
                    </select>
                    <span asp-validation-for="HcvAb" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Hbvsag">HBVsAG</label>
                    <select asp-for="Hbvsag" class="form-control text-center">
                        <option value="+ ve">+ ve</option>
                        <option value="- ve">- ve</option>
                    </select>
                    <span asp-validation-for="Hbvsag" class="text-danger"></span>
                </div>
            </div>

            <!------------------------------------------------------------------------------------>
            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4 me-auto" style="width:60%">
                    <label asp-for="Hb">Hb AIC</label>
                    <input asp-for="Hb" type="number" class="form-control text-center" placeholder="0" />
                    <span asp-validation-for="Hb" class="text-danger"></span>
                </div>

            </div>

            <!------------------------------------------------------------------------------------>

            <div class="parent d-flex align-items-md-end justify-content-center  my-mobile ">
                <div class="mb-3 me-md-4 me-auto" style="width:60%">
                    <label asp-for="Notes">Notes</label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
            <div class="parent d-flex justify-content-md-center gap-2 ">
                <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
                <a onclick="goTo('LabReport')" class="btn btn-secondary" style="width:150px">Back</a>
            </div>
        </div>
    </form>
</div>

<script>
    let ss = document.querySelector(".Lab .nav-link");
    ss.classList.add("active-link");
</script>


