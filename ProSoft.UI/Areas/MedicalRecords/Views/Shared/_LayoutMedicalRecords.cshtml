    <script>
        function toggleNav() {
            const navBar = document.getElementById("mySidebar-patRecord");
            navBar.classList.toggle("nav-open");

            const overlay = document.querySelector(".overlay");
            overlay.classList.toggle("lay-active");
        }

        function goTo(action) {
            const patient = JSON.parse(localStorage.getItem("Current-Patient"));
            window.location.href = `/Medical/PatRecord/${action}/${patient.patId}`;
        }

        function goToEdit(action, recordPK) {
            const patient = JSON.parse(localStorage.getItem("Current-Patient"));
            window.location.href = `/Medical/PatRecord/${action}/${patient.patId}?record=${recordPK}`;
        }


        function editDemog(action) {
            const patient = JSON.parse(localStorage.getItem("Current-Patient"));
            window.location.href = `/Medical/PatRecord/${action}/${patient.patId}`;
        }

        function deleteMe(e) {
            e.preventDefault();
            const myConfirm = confirm('Are you sure you want to delete this item ?');

            if (myConfirm) {
                console.log(e.target.parentElement);
                const deleteForm = e.target.parentElement;
                // console.log(deleteForm.action);

                const patIdInput = e.target.previousElementSibling;
                const patient = JSON.parse(localStorage.getItem("Current-Patient"));
                patIdInput.value = patient.patId;

                // console.log(patIdInput.value);
                deleteForm.submit();
            }
        }

        function printRecord(id) {
            var printContent = document.getElementById(id);
            let header = document.querySelector(".header");

            var originalContent = document.body.innerHTML;

            printContent.querySelector("#for-print").style.visibility = "hidden";
            document.body.innerHTML = header.outerHTML + printContent.outerHTML;
            window.print();

            document.body.innerHTML = originalContent;
        }
    </script>
