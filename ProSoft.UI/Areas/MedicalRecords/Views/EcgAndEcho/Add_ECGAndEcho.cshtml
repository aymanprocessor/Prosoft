@model EcgAndEchoDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add ECG AndE cho";
    Layout = "_LayoutMedicalRecords";
}

<div class="container internal-scroll pt-2">
    <h1 class="mt-4">ECG and Echo</h1>
    <form method="post" asp-action="Add_ECGAndEcho">
        <div class="border p-3 mt-4">

            @* Hidden Inputs *@
            <input asp-for="PatId" type="hidden" value="@ViewBag.patID" />
            <input asp-for="PatSsn" type="hidden" value="@ViewBag.nationalID" />

            <div asp-validation-summary="ModelOnly"></div>
            <div class="parent d-flex align-items-md-end justify-content-center">
                <div class="mb-3 me-md-4" style="width: 60%">
                    <label>Pt Name</label>
                    <input class="form-control" value="@ViewBag.patName" disabled />
                </div>
            </div>
            <!------------------------------------------------------------------------------------>
            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="PatSsn">Patient SSN</label>
                    <input asp-for="PatSsn" type="number" class="form-control" value="@ViewBag.nationalID" disabled />
                    <span asp-validation-for="PatSsn" class="text-danger"></span>
                </div>
                <div class="mb-3 ">
                    <label asp-for="EntryDate">Date</label>
                    <input asp-for="EntryDate" class="form-control" />
                    <span asp-validation-for="EntryDate" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>
            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="RhythmOfAdmission">ECG on Admission</label>
                    <input asp-for="RhythmOfAdmission" class="form-control" />
                    <span asp-validation-for="RhythmOfAdmission" class="text-danger"></span>
                </div>
                <div class="mb-3 ">
                    <label asp-for="EjectionFraction">Ejection Fraction</label>
                    <input asp-for="EjectionFraction" class="form-control" />
                    <span asp-validation-for="EjectionFraction" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>
            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="parent d-flex align-items-md-end justify-content-center my-mobile"
                     style="width: 60%;">
                    <label asp-for="SwmaAtRest" class="me-md-3"><p>SWMA at rest</p></label>
                    <div class="mb-3 mx-md-2" style="width: 20%;">
                        <label class="form-check-label">
                            <input asp-for="SwmaAtRest" class="form-check-input radio-inline" type="radio" name="SwmaAtRest" value="1">
                            yes
                        </label>
                    </div>
                    <div class="mb-3 mx-md-2" style="width: 20%;">
                        <label class="form-check-label">
                            <input asp-for="SwmaAtRest" class="form-check-input radio-inline" type="radio" name="SwmaAtRest" value="2">
                            No
                        </label>
                    </div>
                </div>
            </div>
            <!------------------------------------------------------------------------------------>
            <div class="parent d-flex align-items-md-end justify-content-center my-mobile">
                <div class="mb-3 me-md-4">
                    <label asp-for="Edd">EDD</label>
                    <input asp-for="Edd" class="form-control" />
                    <span asp-validation-for="Edd" class="text-danger"></span>
                </div>
                <div class="mb-3 ">
                    <label asp-for="Esd">ESD</label>
                    <input asp-for="Esd" class="form-control" />
                    <span asp-validation-for="Esd" class="text-danger"></span>
                </div>
            </div>
            <div class="parent d-flex justify-content-md-center gap-2">
                <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
                <a onclick="goTo('EcgAndEcho')" class="btn btn-secondary" style="width:150px">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let ss = document.querySelector(".ECG .nav-link");
        ss.classList.add("active-link");
    </script>
}