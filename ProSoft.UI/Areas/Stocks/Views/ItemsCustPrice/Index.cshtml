@using ProSoft.EF.DTOs.Stocks.ItemsCustPrice
@model ItemsCustPriceViewDTO
@inject IViewLocalizer localizer
@{
    ViewData["title"] = "Customer Pricing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center mt-3">@localizer["Customer Pricing"]</h1>
    <form method="post" asp-action="Index" asp-controller="ItemsCustPrice" class="filter-box mt-5 mb-5 p-3">
        <div class="row mt-3">
            <div class="col-lg-4 col-md-6">
                <label class="form-label" asp-for="@Model.adjectiveCode"></label>
                <select class="form-select form-control" asp-items="@ViewBag.AdjectiveCust" asp-for="@Model.adjectiveCode">
                    <option value="">@localizer["Choosee"]</option>
                </select>
                <span asp-validation-for="@Model.adjectiveCode" class="text-danger"></span>
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label" asp-for="@Model.SearchByItemCode">@localizer["Search By Item Code"]</label>
                <input type="text" class="form-control" asp-for="@Model.SearchByItemCode" />
                <span asp-validation-for="@Model.SearchByItemCode" class="text-danger"></span>
            </div>

            <div class="col-lg-3 col-md-6">
                <label class="form-label" asp-for="@Model.SearchByItemName"></label>
                <input type="text" class="form-control" asp-for="@Model.SearchByItemName" />
                <span asp-validation-for="@Model.SearchByItemName" class="text-danger"></span>
            </div>

            <div class="col-lg-2 col-md-6 align-self-end">
                <button type="submit" class="btn btn-primary">@localizer["View"]</button>
            </div>
        </div>

    </form>


    <table id="CustomerPriceTable" class="table table-hover table-striped table-bordered">
        <thead>
            <tr>

                <th class="text-center">@localizer["Item Code"]</th>
                <th class="text-center">@localizer["Item Group"]</th>
                <th class="text-center">@localizer["Item Name"]</th>
                <th class="text-center">@localizer["Price"]</th>
                <th class="text-center">@localizer["Discount"]</th>
                <th class="text-center">@localizer["Tax"]</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>

@section Scripts {
    <script>

        const CustomerPriceTable = $("#CustomerPriceTable");

        CustomerPriceTable.DataTable({
            paging:false,
            "language": {
                "emptyTable": "لا توجد بيانات متاحة في الجدول"
            }
        });
    </script>

}