@model List<UserTransViewDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "User Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IViewLocalizer localizer

<div class="text-center">
    <h1 class="mb-2">@localizer["Users Transactions"] </h1>
    <p class="fs-5">@localizer["Before anything, select the user"]</p>
</div>

<div class="container pt-2" style=" min-height:100vh;">
    <div class="mb-2">
        <div class="d-flex justify-content-between align-items-start align-items-md-center flex-column-reverse flex-md-row">
            <div class="my-2" style="width: 40%;">
                <input type="text" id="searchInput" class="form-control" oninput="searchUsers(event)" placeholder="@localizer["Search users by useer code ..."]">
            </div>
            <a class="add-link btn btn-sm btn-primary fs-6" style="width:150px">
                @localizer["Add Transaction For User"]
            </a>
        </div>
    </div>
    <div class="overflow-auto" style="height: 300px;">
        <table id="myTable" class="table table-bordered table-hover" style="width:100%;">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["Code"]
                    </th>
                    <th class="align-middle" style="min-width: 150px;">
                        @localizer["User Name"]
                    </th>
                    <th class="align-middle">
                        @localizer["Permissions"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr onclick="getUserTransactions(event, @item.UserCode)" style="cursor:pointer;">
                    <td class="align-middle">@item.UserCode</td>
                    <td class="align-middle user-name">@item.UserName</td>
                    <td class="align-middle">
                    @foreach (var permission in item?.Permissions)
                    {
                        <span class="d-inline-block bg-secondary py-1 px-2 me-1 mb-2 text-light fs-5" style="border-radius: 8px">@permission.GDesc</span>
                    }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    @* /////////////////////////////////////////////////////////////////// *@

    @* Table for User Transactions *@

    <div class="transactions-table-head d-flex justify-content-between align-items-center mt-4">
        <h2 class="header">@localizer["Transactions of User"] :</h2>
    </div>

    <div class="border border-success p-0 mb-2 border-opacity-75 overflow-auto" style="max-height: 300px;">

        <table id="myTable_2" class="table table-bordered table-hover" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["Transaction Name"]
                    </th>
                    <th class="align-middle">
                        @localizer["Transaction Type"]
                    </th>
                    <th class="align-middle">
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function searchUsers(e) {
            let input = e.target;
            let filterValue = input.value;
            let rows = document.querySelectorAll("#myTable tbody tr");

            if (!filterValue) {
                for (let i = 0, len = rows.length; i < len; i++) {
                    rows[i].style.display = "";
                }
                return;
            }

            // Loop through all table rows, hide those that do not match the search query
            for (let i = 0, len = rows.length; i < len; i++) {
                let td = rows[i].querySelectorAll("td")[0];
                if (td) {
                    let tdValue = td.textContent || td.innerText;
                    if (tdValue == filterValue) {
                        rows[i].style.display = "";
                    } else {
                        rows[i].style.display = "none";
                    }
                }
            }
        }

        function getUserTransactions(e, userCode) {
            // Handle active click
            let allItemRows = e.target.parentElement.parentElement.querySelectorAll("tr");;
            allItemRows.forEach(row => {
                row.classList.remove("active-row");
            });

            let clickedTarget = e.target.parentElement;
            clickedTarget.classList.add("active-row");
            ///////////////////////////////////////////////////////////////////

            let addTransactionLink = document.querySelector(".add-link");
            addTransactionLink.setAttribute("href", `/Stocks/UserTransaction/Add_Transaction/${userCode}`);
            ///////////////////////////////////////////////////////////////////

            let userTransactions = document.querySelector("#myTable_2 tbody");
            let transactionsHead = document.querySelector(".transactions-table-head");
            let transactionsHeader = transactionsHead.querySelector(".header");
            let userName = clickedTarget.querySelector(".user-name").innerText;
            transactionsHeader.innerHTML = `@localizer["Transactions of User"] : ${userName}`;

            userTransactions.innerHTML = "";  // Empty the table

            $.ajax({
                url: `/Stocks/UserTransaction/GetPermissionsForUser/${userCode}`,
                success: function (result) {
                    console.log(result);
                    for (let item of result) {
                        const userTrans = document.createElement("tr");
                        userTrans.innerHTML +=
                            `
                            <td class="align-middle">${item.gId}</td>
                            <td class="align-middle">${item.gDesc}</td>
                            <td class="align-middle">${item.transactionType}</td>
                            <td class="text-center align-middle" style="width: 325px;">
                                <form action="/Stocks/UserTransaction/Delete_Transaction" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="${item.gId}" />
                                    <input type="hidden" name="userCode" value="${userCode}" />
                                    <button class="btn btn-sm btn-danger mb-1 fs-6" onclick="return confirm('Are you sure you want to delete this one?')" style="width: 150px">@localizer["Delete"]</button>
                                </form>
                            </td>
                            `;
                                // <a href="/Stocks/UserTransaction/Edit_Transaction/${item.gId}" class="btn btn-sm btn-success mb-1 fs-6" style="width: 150px">@localizer["Edit"]</a>
                        userTransactions.appendChild(userTrans);
                    }
                }
            });
        }
    </script>
}