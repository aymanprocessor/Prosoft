@model List<KindStoreDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Analysis Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IViewLocalizer localizer

<div class="text-center">
    <h1 class="mb-2">@localizer["Stocks Types"] </h1>
</div>

<div class="container pt-2" style="min-height:100vh;">
    <div class="d-flex justify-content-between mb-2 gap-2">
        <div>
            <a asp-area="Stocks" asp-controller="StocksTypes" asp-action="Add_StockType" class="btn btn-sm btn-primary fs-6" style="width:150px">
                @localizer["Add Stock Type"]
            </a>
        </div>
    </div>
    <div class="border border-success p-0 mb-2 border-opacity-75 overflow-auto" style="height: 200px;">
        <table id="myTable" class="table table-bordered table-hover" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>
                        @localizer["Stock ID"]
                    </th>
                    <th>
                        @localizer["Stock Kind"]
                    </th>
                    <th>
                        @localizer["Stock Type"]
                    </th>
                </tr>
            </thead>
