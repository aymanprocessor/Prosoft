@model List<StockViewDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Stocks Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IViewLocalizer localizer

<div class="text-center">
    <h1 class="mb-2">@localizer["Stocks"] </h1>
</div>

<div class="container pt-2">
    <div class="d-flex justify-content-between mb-2 gap-2">
        <div>
            <a asp-area="Stocks" asp-controller="Stock" asp-action="Add_Stock" class="btn btn-sm btn-primary fs-6" style="width:150px">
                @localizer["Add Stock"]
            </a>
        </div>
    </div>
    <div class="overflow-auto" style="max-height:calc(100vh - 145px)">
        <table id="myTable" class="table table-bordered table-hover overflow-auto" style="width:100%;">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["Stock ID"]
                    </th>
                    <th class="align-middle">
                        @localizer["Stock Name"]
                    </th>
                    <th class="align-middle">
                        @localizer["Stock Kind"]
                    </th>
                    <th class="align-middle">
                        @localizer["Jornal Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["Stock Type"]
                    </th>
                    <th class="align-middle">
                        @localizer["Branch"]
                    </th>
                    <th class="align-middle">
                        @localizer["System Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["Is Active"]
                    </th>
                    <th class="align-middle">
                        @localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Stkcod</td>
                        <td class="align-middle">@item.Stknam</td>
                        <td class="align-middle">@item.StockPurchOnshelf</td>
                        <td class="align-middle">@item.JornalCode</td>
@*                         <td class="align-middle">@item.Flag1</td>
                        <td class="align-middle">@item.BranchId</td> *@
                        <td class="align-middle">@item.StockType</td>
                        <td class="align-middle">
                            @if(item.StkOnOff == 1)
                                @localizer["Yes"]
                            else if(item.StkOnOff == 0)
                                @localizer["No"]
                            @item.StkOnOff
                        </td>
                        <td class="text-center align-middle" style="width: 325px;">
                            <a asp-controller="Stock" asp-action="Edit_Stock" asp-route-id="@item.Stkcod" class="btn btn-sm btn-success mb-1 fs-6" style="width: 150px">@localizer["Edit"]</a>
                            <form asp-action="Delete_Stock" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Stkcod" />
                                <button class="btn btn-sm btn-danger mb-1 fs-6" onclick="return confirm('Are you sure you want to delete this one?')" style="width: 150px">@localizer["Delete"]</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
