                     //for click to call ajax
                        patAdmission.style.cursor = "pointer";
                        patAdmission.onclick = function (event) {
                            GetClinicTrans(event, item.masterId);
                        }
                        admissions.appendChild(patAdmission);
                        //console.log(section);
                    }
                }

            });
        }

