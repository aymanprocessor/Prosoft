@using ProSoft.UI.Global

@inject IViewLocalizer localizer

<div class="table-header admission-table-head d-flex justify-content-between">
    @*<h2 class="header pat-admission">زيارات</h2>*@
    <div>
        <a class="btn btn-sm btn-primary fs-6" id="btnAddPatAdmissionNew" disabled>
            @Html.Raw(GlobalConstants.InsertIcon) @localizer["Add New Row"]
        </a>
        <a class="btn btn-sm btn-primary fs-6" id="btnSavePatAdmission" disabled>
            @Html.Raw(GlobalConstants.SaveIcon) @localizer["Save"]
            <span class="spinner-border spinner-border-sm me-2 spinner-hidden d-none" role="status" aria-hidden="true" id="btnSavePatAdmissionSpinner"></span>
        </a>
    </div>
</div>

<div class="border mt-1 p-1" style="background-color: #f4f5f7;">
    <div class="table-responsive">
        <table class="table table-bordered table-hover admisson-table" style="width:100%" data-parsley-validate="">
            <thead>
                <tr>
                    <th class="align-middle">@localizer["Master Id"]</th>
                    <th class="align-middle">@localizer["Entry Date"]</th>
                    <th class="align-middle">@localizer["Entity Type"]</th>
                    <th class="align-middle">ج رئيسية</th>
                    <th class="align-middle">ج فرعية</th>
                    <th class="align-middle">@localizer["Department"]</th>
                    <th class="align-middle">@localizer["Sections"]</th>
                    <th class="align-middle">@localizer["Doctors"]</th>
                    <th class="align-middle">@localizer["Exit Date"]</th>
                    <th class="align-middle">@localizer["Patient Value"]</th>
                    <th class="align-middle">قيمة الجهة</th>
                    <th class="align-middle">@localizer["Pre-Paid"]</th>
                    <th class="align-middle">@localizer["Invoice No"]</th>
                    <th class="align-middle">@localizer["Session No"]</th>
                    <th class="align-middle"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>