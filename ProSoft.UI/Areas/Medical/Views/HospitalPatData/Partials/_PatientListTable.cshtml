@using ProSoft.UI.Global
@inject IViewLocalizer localizer

  
        <div class="table-header d-flex justify-content-between">
            <div>
                <a class="btn btn-sm btn-primary fs-6" id="btnAddPatientNew">
                    @Html.Raw(GlobalConstants.InsertIcon) @localizer["Add New Row"]
                </a>
                <a class="btn btn-sm btn-primary fs-6" id="btnSavePatient" disabled>
                    @Html.Raw(GlobalConstants.SaveIcon) @localizer["Save"]
                    <span class="spinner-border spinner-border-sm me-2 spinner-hidden d-none" role="status" aria-hidden="true" id="btnSavePatientSpinner"></span>
                </a>
            </div>
        </div>
        <div class="border  p-1" style="background-color: #f4f5f7;">
            <div class="table-responsive">
                <table class="table table-bordered table-hover patient-table display compact " style="width:100%" data-parsley-validate>
                    <thead>
                        <tr>
                            <th class="align-middle">كود المريض</th>
                            <th class="align-middle">اسم المريض</th>
                            <th class="align-middle">نوع الجنس</th>
                            <th class="align-middle">رقم الموبايل</th>
                            <th class="align-middle">رقم التلفون</th>
                            <th class="align-middle">نوع الهوية</th>
                            <th class="align-middle">الرقم القومي</th>
                            @*<th class="align-middle">رقم الدخول</th>*@
                            <th class="align-middle">الحالة الاجتماعية</th>

                            <th class="align-middle">تاريخ الميلاد</th>
                            <th class="align-middle">العمر بالسنين</th>
                            <th class="align-middle">العمر بالشهور</th>
                            <th class="align-middle">العمر بالايام</th>
                            <th class="align-middle">العنوان</th>
                            @*<th class="align-middle">الوظيفة</th>*@
                            <th class="align-middle">الايميل</th>
                            @*<th class="align-middle">المستشفى</th>*@
                            @*<th class="align-middle">الإدارة</th>*@
                            @*<th class="align-middle">القطاع</th>*@
                            <th class="align-middle">تاريخ الدخول</th>
                            <th class="align-middle">وقت الدخول</th>
                            <th class="align-middle">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>
  