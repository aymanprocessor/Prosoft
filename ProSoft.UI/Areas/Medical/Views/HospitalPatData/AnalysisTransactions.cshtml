            let clinicTransAddButton = clinicTransHead.querySelector("a");
                clinicTransAddButton.setAttribute("href", `/Medical/ClinicTrans/Add_ClinicTrans/${id}?redirect=AnalysisTransactions&flag=1`);
            let analysisHeader = analysisHead.querySelector(".header.analysis");
                analysisHeader.innerHTML = "@localizer["Analysis details for"] : -@localizer["visit No"]: - @localizer["transaction No"]:";

            
            // console.log(clinicTransAddButton);
            ///////////////////////////////////////////////////////////////////

            // Handle ajax call
            clinicTrans.innerHTML = "";  // Empty the body
            // For closing analysisDetails
            analysis.innerHTML = "";  // Empty the body

            $.ajax({
                url: `/Medical/ClinicTrans/GetClinicTrans/${id}?flag=1`,
                success: function (result) {
                    //console.log(result);
                    // console.log(result.sort((a, b) => b.itemanalcode - a.itemanalcode));
                    //sortng
                    result.sort((a, b) => b.counter - a.counter)

                    for (let item of result) {
                        const clinic = document.createElement("tr");
                        clinic.innerHTML +=
                        `
                            <td class="trans-id align-middle">${item.counter}</td>
                            ${item.itmServFlag == 3 ?
                                `<td class="align-middle">${item.servDesc}</td>`
                                : `<td class="align-middle">${item.subName}</td>`
                            }
                            <td class="align-middle">${item.drDesc}</td>
                            <td class="align-middle">${item.unitPrice}</td>
                            <td class="align-middle">${item.patientValue}</td>
                            <td class="align-middle">${item.extraVal}</td>
                            <td class="align-middle">${item.extraVal2}</td>
                            <td class="align-middle">${item.compValue}</td>
                            <td class="align-middle">${item.compValue + item.patientValue}</td>

                        `;
                        //for click to call ajax
                        clinic.style.cursor = "pointer";
                        clinic.onclick = function (event) {
                            GetAnalysisDetail(event, item.checkId, item.sClinicId);//, item.subCode, item.mainCode
                        };
                        clinicTrans.appendChild(clinic);
                    }
                }
            });
            }
        
        /////////////////////////////////////////////////////////////////////////////////////////////////
        @* Ajax for Analysis *@
        function GetAnalysisDetail(e, id, sClinicId) {
            var analysis = document.querySelector(".analysis-table tbody");

            // Handle active clic
            let allItemRows = e.target.parentElement.parentElement.querySelectorAll("tr");;

            allItemRows.forEach(row => {
                row.classList.remove("active-row");
            });

            let clickedTarget = e.target.parentElement
            clickedTarget.classList.add("active-row");
            ///////////////////////////////////////////////////////////////////

            if (sClinicId == 5) {
                // Catch header for analysisDetails => PatAdmissionID and reset it
                let analysisHead = document.querySelector(".analysis-table-head");

                let itemName = document.querySelector(".active-row .item-name").innerText;
                let itemId = document.querySelector(".active-row .item-id").innerText;

                let transId = clickedTarget.querySelector(".trans-id").innerText;

                let analysisPrintButton = analysisHead.querySelector("a");
                    analysisPrintButton.setAttribute("href", `/Medical/AnalysisDetail/PrintAnalysis/${id}`);

                let analysisHeader = analysisHead.querySelector(".header.analysis"); // Display Header for sub items
                    analysisHeader.innerHTML = "@localizer["Analysis details for"] :" + itemName + " - @localizer["visit No"] :" + itemId + " - @localizer["transaction No"] :" + transId;

                ///////////////////////////////////////////////////////////////////

                // Handle ajax call
                analysis.innerHTML = "";  // Empty the body
                $.ajax({
                    url: `/Medical/AnalysisDetail/GetAnalysisDetail/${id}`,//?subCode=${subCode}&mainCode=${mainCode}
                    success: function (result) {
                        //console.log(result);
                        // console.log(result.sort((a, b) => b.itemanalcode - a.itemanalcode));
                        //sortng
                        // result.sort((a, b) => b.counter - a.counter)

                        for (let item of result) {
                            const analysisItem = document.createElement("tr");
                            analysisItem.innerHTML +=
                                `
                                <td class="align-middle">${item.itemanalcode}</td>
                                <td class="align-middle">${item.itemanalname}</td>
                                <td class="align-middle">${item.itemrate}</td>

                                <td width="20%" class="text-center">
