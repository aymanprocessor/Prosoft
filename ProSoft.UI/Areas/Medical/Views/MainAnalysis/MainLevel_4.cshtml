@model List<MainViewDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_LayoutMedAnalysis";
}
<div class="container pt-2">
    <div class="d-flex justify-content-between align-items-center mt-4 ">
        <h1 class="header">@ViewBag.main.MainName  </h1>

        <a asp-controller="MainAnalysis" asp-action="AddMainLevel_4" asp-route-ID="@ViewBag.main.MainCode" class="btn btn-sm btn-primary fs-6" style="width:150px">
            Add Main Analysis
        </a>

    </div>
    <table id="myTable" class="table table-bordered table-hover" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>
                    Code
                </th>
                <th>
                    Description
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var analysis in Model)
            {
                <tr>
                    <td>
                        @analysis.MainCode
                    </td>
                    <td>
                        @analysis.MainName
                    </td>
                    <td width="30%" class="text-center">
                        <a asp-controller="MainAnalysis" asp-action="EditMainLevel_4" asp-route-ID="@analysis.MainCode" class="btn btn-sm btn-success mb-1  fs-6" style="width:150px">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <form asp-action="DeleteMainLevel_4" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@analysis.MainCode" />
                            <button type="submit" class="btn btn-sm btn-danger mb-1  fs-6" onclick="return confirm('Are you sure you want to delete this item ?');" style="width:150px">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
