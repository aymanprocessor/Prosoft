@model List<MainClinicViewDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Department services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IViewLocalizer localizer

<style>
    .active-row {
        background-color: #cdcdcd;
    }

    .image {
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        background-position: center;
        opacity: 0.5;
        z-index: -1;
    }
</style>


<div class="container pt-2" style=" min-height:100vh;">
    <img class="image" src="/background.jpg" style="position:absolute;" />

    <div class="d-flex justify-content-between align-items-center mt-4 ">
        <h1 class="header">@localizer["Department services"]</h1>

        <a asp-controller="MainClinic" asp-action="Add_MainClinic" class="btn btn-sm btn-primary fs-6" style="width:150px">
            @localizer["Add Clinic"]
        </a>
    </div>
    <div class="overflow-auto" style="height: 300px;">
        <table id="myTable" class="table table-bordered table-hover" style="width:100%;">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["Clinic Name"]
                    </th>
                    <th class="align-middle">
                        @localizer["Department Name"]
                    </th>
                    <th class="align-middle">
                        @localizer["Activation"]
                    </th>
                    <th class="align-middle">
                        @localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var clc in Model)
                {
                    <tr onclick="GetSubClinic(event,@clc.ClinicId)" style="cursor:pointer;">
                        <td>
                            @clc.ClinicId
                        </td>
                        <td class="item-name">
                            @clc.ClinicDesc
                        </td>
                        <td>
                            @clc.SecName
                        </td>
                        <td>
                            @if (clc.MOnOff == 1)
                                @localizer["Yes"]
                            else if (clc.MOnOff == 0)
                                @localizer["No"]
                        </td>
                        <td width="30%" class="text-center">
                            <a asp-controller="MainClinic" asp-action="Edit_MainClinic" asp-route-ID="@clc.ClinicId" class="btn btn-sm btn-success mb-1 fs-6" style="width:150px">
                                <i class="bi bi-pencil"></i> @localizer["Edit"]
                            </a>

                            <form asp-action="Delete_MainClinic" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@clc.ClinicId" />
                                <button type="submit" class="btn btn-sm btn-danger mb-1  fs-6" onclick="return confirm('Are you sure you want to delete this item ?');" style="width:150px">@localizer["Delete"] </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @* /////////////////////////////////////////////////////////////////// *@

    @* Table for DocSUbDtl *@

    <div class="DocSubDtl-table-head d-flex justify-content-between align-items-center mt-4">
        <h2 class="header DocSub-Dtl">@localizer["SubClinc Name"] :</h2>

        <a class="btn btn-sm btn-primary fs-6" style="width:150px">
            @localizer["Add SubClinc"]
        </a>
        @* asp-controller="MedAnalysis" asp-action="Add_SubItemAnalysis" asp-route-ID="@ViewBag.item.MainCode" asp-route-itemAnalCode="" *@
    </div>

    <div class="border border-success p-0 mb-2 border-opacity-75 overflow-auto" style="max-height: 300px;">

        <table id="myTable" class="table table-bordered table-hover docSubDtl-table" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["SubClinc Name"]
                    </th>
                    <th class="align-middle">
                        @localizer["Revenue Department"]
                    </th>
                    <th class="align-middle">
                        @localizer["Cost Center"]
                    </th> 
                    <th class="align-middle">
                        @localizer["Add Service"]
                    </th>
                    <th class="align-middle">
                        @localizer["Tax Category"]
                    </th>
                    <th class="align-middle">
                        @localizer["Send Invoice"]
                    </th>
                    <th class="align-middle">
                        @localizer["Stock"]
                    </th>
                    <th class="align-middle">
                        @localizer["Action"]
                    </th>

                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    @* /////////////////////////////////////////////////////////////////// *@

</div>