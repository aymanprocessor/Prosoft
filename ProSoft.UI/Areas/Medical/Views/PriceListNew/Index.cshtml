@using Newtonsoft.Json
@model PriceListDTO
@{
    ViewData["Title"] = "Price List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var jsonSettings = new JsonSerializerSettings
    {
        ReferenceLoopHandling = ReferenceLoopHandling.Ignore
    };
}

@inject IViewLocalizer localizer
<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css">

<style>
    .table-responsive {
        overflow-x: auto;
    }

  
  
</style>
<div class="container" style="min-height:100vh;">
    <div class="text-center">
        <h1 class="pb-3 pt-5">قوائم الاسعار</h1>
    </div>
    <div class="border mt-5 p-3" style="background-color: #f4f5f7;">
        <div class="table-responsive">
            <table id="PriceList" class="table table-striped table-bordered" style="width:100%" data-parsley-validate>
                <thead>
                    <tr>
                        <th>كود</th>
                        <th>اسم القائمة</th>
                        <th>نوع القائمة</th>
                        <th>تاريخ القائمة</th>
                        <th>السنة المالية</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>


    <div class="border mt-5 mx-2 p-3" style="background-color: #f4f5f7;">
        <div class="table-responsive">
            <table id="PriceListDetail" class="table table-striped table-bordered" data-parsley-validate>
                <thead>
                    <tr>
                        <th></th>
                        <th>كود</th>
                        <th>مستوى 1</th>
                        <th>مستوى 2</th>
                        <th>مستوى 3</th>
                        <th>الخدمة قبل الخصم</th>
                        <th>نسبة خصم الخدمة</th>
                        <th>الخدمة بعد الخصم</th>
                        <th>نسبة الشركة</th>
                        <th>قيمة تحمل الشركة</th>
                        <th>تحمل العضو</th>
                        <th>تحمل القريب</th>
                        <th>تحمل مستلزمات علي المريض</th>
                        <th>تحمل صيانة علي المريض</th>
                        <th>تغطي الخدمة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {

    <script src="~/js/Medical/HospitalPatData/Invoices/ajax-handlers.js" asp-append-version="true"></script>
    <script src="~/js/Medical/PriceList/priceList.js" asp-append-version="true"></script>
}