@model LabUnitDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_LayoutMedAnalysis";
}
<div class="container pt-2">
    <h1 class="mt-4">Edit Lab Unit : @Model.LabUnitName</h1>
    <form method="post" asp-action="Edit_LabUnit" id="myForm">
        <div class="border p-3 mt-4">

            <div asp-validation-summary="ModelOnly"></div>

            @* Hidden Inputs *@
            <input asp-for="LabUnitCode" type="hidden" />

            <div class="parent d-flex align-items-md-end justify-content-center  my-mobile ">
                <div class="mb-3 me-md-4">
                    <label asp-for="LabUnitCode"></label>
                    <input asp-for="LabUnitCode" class="form-control" disabled />
                    <span asp-validation-for="LabUnitCode" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LabUnitName"></label>
                    <input asp-for="LabUnitName" class="form-control" />
                    <span asp-validation-for="LabUnitName" class="text-danger"></span>
                </div>
            </div>
            <!------------------------------------------------------------------------------->
            <button type="submit" class="btn btn-primary" style="width:150px">
                Save Changes
            </button>
        </div>
    </form>
</div>