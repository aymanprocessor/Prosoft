@model List<PriceListViewDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Price List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //SelectList drList = new SelectList(ViewBag.doctors, "DrId", "DrDesc");

}
@inject IViewLocalizer localizer
<div class="container pt-2" style=" min-height:100vh;">

    <div class="d-flex justify-content-between align-items-center mt-4 ">
        <h1 class="header">@localizer["Price Lists"]</h1>
         
        <a asp-controller="PriceList" asp-action="Add_PriceList" class="btn btn-sm btn-primary fs-6" style="width:150px">
            @localizer["Add List"]
        </a>
    </div>
    <div class="overflow-auto" style="height: 300px;">
        <table id="myTable" class="table table-bordered table-hover" style="width:100%;">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["List Name"]
                    </th>
                    <th class="align-middle">
                        @localizer["List Type"]
                    </th>
                    <th class="align-middle">
                        @localizer["Date of List"]
                    </th>
                    <th class="align-middle">
                        @localizer["Financial Year"]
                    </th>
                    <th class="align-middle">
                        @localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pl in Model)
                {
                    <tr onclick="GetDocSubDtl(event,@pl.PLId)" style="cursor:pointer;">
                        <td>
                            @pl.PLId
                        </td>
                        <td class="item-name">
                            @pl.PlDesc
                        </td>
                        <td>
                            @if (pl.Flag1 == 1)
                                @localizer["Private"]
                            else if (pl.Flag1 == 2)
                                @localizer["Contract"]
                        </td>
                        <td>
                            @pl.PLDate
                        </td>
                        <td>
                            @pl.Year
                        </td>

                        <td width="30%" class="text-center">
                            <a asp-controller="PriceList" asp-action="Edit_PriceList" asp-route-ID="@pl.PLId" class="btn btn-sm btn-success mb-1 fs-6" style="width:150px">
                                <i class="bi bi-pencil"></i> @localizer["Edit"]
                            </a>

                            <form asp-action="Delete_PriceList" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@pl.PLId" />
                                <button type="submit" class="btn btn-sm btn-danger mb-1  fs-6" onclick="return confirm('Are you sure you want to delete this item ?');" style="width:150px">@localizer["Delete"] </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @* /////////////////////////////////////////////////////////////////// *@

    @* Table for DocSUbDtl *@

    <div class="DocSubDtl-table-head d-flex justify-content-between align-items-center mt-4">
        <h2 class="header DocSub-Dtl">@localizer["Specialties of Doctor"] :</h2>

        <a class="btn btn-sm btn-primary fs-6" style="width:150px">
            @localizer["Add Specialty"]
        </a>
        @* asp-controller="MedAnalysis" asp-action="Add_SubItemAnalysis" asp-route-ID="@ViewBag.item.MainCode" asp-route-itemAnalCode="" *@
    </div>

    <div class="border border-success p-0 mb-2 border-opacity-75 overflow-auto" style="max-height: 300px;">

        <table id="myTable" class="table table-bordered table-hover docSubDtl-table" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["Department"]
                    </th>
                    <th class="align-middle">
                        @localizer["Specialty"]
                    </th>
                    <th class="align-middle">
                        @localizer["Activation"]
                    </th>
                    <th class="align-middle">
                        @localizer["Main Specialty"]
                    </th>
                    <th class="align-middle">
                        @localizer["Action"]
                    </th>

                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    @* /////////////////////////////////////////////////////////////////// *@

</div>