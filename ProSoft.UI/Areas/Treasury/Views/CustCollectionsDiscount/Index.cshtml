@model List<CustCollectionsDiscountViewDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Check deductions";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var index = 1;
}
@inject IViewLocalizer localizer
