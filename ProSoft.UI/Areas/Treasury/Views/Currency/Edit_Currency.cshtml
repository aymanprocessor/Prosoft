<div class="container pt-2" style="min-height:100vh;">
    @* <img class="image" src="/background.jpg" style="position:absolute;" /> *@

    <h1 class="mt-4">@localizer["Edit Currency"]</h1>
    <form method="post" asp-action="Edit_Currency" id="myForm">
        <div class="border p-3 mt-4">

            <div asp-validation-summary="ModelOnly"></div>
            @* hidden *@
            <input asp-for="CodeNo" hidden />
            <input asp-for="TableCode" hidden value="CUR" />

            <div class="parent d-flex align-items-md-end justify-content-center  my-mobile gap-3 ">

                <div class="mb-3 ">
                    <label asp-for="CodeNo"></label>
                    <input asp-for="CodeNo" class="form-control" disabled />
                    <span asp-validation-for="CodeNo" class="text-danger"></span>
                </div>
                <div class="mb-3 ">
                    <label asp-for="CodeDesc"></label>
                    <input asp-for="CodeDesc" class="form-control" />
                    <span asp-validation-for="CodeDesc" class="text-danger"></span>
                </div>
                <div class="mb-3 ">
                    <label asp-for="Symbol"></label>
                    <input asp-for="Symbol" class="form-control" />
                    <span asp-validation-for="Symbol" class="text-danger"></span>
                </div>
            </div>

            <!------------------------------------------------------------------------------->

            <div class="parent d-flex justify-content-md-center gap-2 ">
                <button type="submit" class="btn btn-success" style="width:150px">
                    @localizer["Save Changes"]
                </button>
                <a asp-controller="Currency" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    @localizer["Cancel"]
                </a>
            </div>
        </div>
    </form>
</div>
