<div class="container pt-2 " style="min-height:90vh;">
    @* <img class="image" src="/background.jpg" style="position:absolute;" /> *@
    @if (ViewBag.error != null)
    {
        <div class="alert alert-danger mx-auto mb-0 w-50 text-center position-relative" style="margin-bottom: -35px !important;">
            @ViewBag.error
            <a asp-controller="AccSafeCash" asp-action="Index" asp-route-docType="SFCIN" asp-route-flagType="oneANDtwo" class="position-absolute text-decoration-none text-black fs-4"
            style="right: 5px !important; top: -7px !important;">&times;</a>
        </div>
    }
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h1 class="header">@localizer["Payment Receipts"]</h1>
        <a asp-controller="AccSafeCash" asp-action="Add_PaymentReceipt" asp-route-docType="@ViewBag.docType" asp-route-safeCode="@ViewBag.safeCode" asp-route-fYear="@ViewBag.fYear" class="btn btn-sm btn-primary fs-6" style="width:150px">
            @localizer["Add Receipt"]
        </a>
    </div>
    <div class="overflow-auto" style="max-height:calc(100vh - 145px)">
        <table id="myTable" class="table table-bordered table-hover" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>
                        @localizer["Receipt No"]
                    </th> 
                    <th>
                        @localizer["Receipt date"]
                    </th>
                    <th>
                        @localizer["Treasury Name"]
                    </th>
                    <th>
                        @localizer["Depositor Name"]
                    </th>
                    <th>
                        @localizer["Amount Deposited"]
                    </th>
                    <th>
                        @localizer["Amount by words"]
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var acc in Model)
                {
                    <tr class="align-middle">
                        <td>
                            @acc.DocNo
                        </td>
                        <td>
                            @acc.DocDate
                        </td>
                        <td>
                            @acc.SafeName
                        </td>
                        <td>
                            @acc.PersonName
                        </td>
                        <td>
                            @acc.ValuePay
                        </td>
                        <td>
                            @acc.ValuePayWord جنيها فقط
                        </td>
                        <td width="30%" class="text-center">
                            <a asp-controller="CustCollectionsDiscount" asp-action="Index" asp-route-ID="@acc.SafeCashId" class="btn btn-sm btn-dark mb-1  fs-6" style="width:100px">
                                <i class="bi bi-pencil"></i> @localizer["Add Discount"]
                            </a>
                            <a asp-controller="AccSafeCash" asp-action="Edit_PaymentReceipt" asp-route-ID="@acc.SafeCashId" class="btn btn-sm btn-success mb-1 fs-6" style="width:100px">
                                <i class="bi bi-pencil"></i> @localizer["Edit"]
                          </a>

                            <form asp-action="Delete_PaymentReceipt" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@acc.SafeCashId" />
                                <button type="button" onclick="openModalListener(event)" class="btn btn-sm btn-danger mb-1  fs-6" data-modal-target style="width:100px">@localizer["Delete"]</button>
                                <div class="modal-container">
                                    <div class="modal 4" id="modal">
                                        <div class="modal-header">
                                            <div class="title">Confirm Delete</div>
                                            <button type="button" onclick="closeModelListener(event)" data-close-button class="close-button">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            @localizer["Are you sure you want to delete this item ?"]
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" onclick="closeModelListener(event)" data-close-button class="btn btn-secondary">@localizer["No"]</button>
                                            <button class="btn btn-danger">@localizer["Yes"]</button>
                                        </div>
                                    </div>
                                    <div onclick="overlayListener(event)" id="overlay"></div>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

