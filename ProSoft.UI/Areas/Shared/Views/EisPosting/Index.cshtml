@model List<EisPostingViewDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "System Accounts Coding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject IViewLocalizer localizer

<div class="text-center">
    <h1 class="mb-2">@localizer["System Accounts Coding"] </h1>
</div>

<div class="container pt-2" style=" min-height:100vh;">
    <div class="d-flex justify-content-between mb-2 gap-2">
        <div>
            <a asp-area="Shared" asp-controller="EisPosting" asp-action="Add_SysAccount" class="btn btn-sm btn-primary fs-6" style="width:150px">
                @localizer["Add System Account"]
            </a>
        </div>
    </div>
    <div class="overflow-auto" style="height: 300px;">
        <table id="myTable" class="table table-bordered table-hover" style="width:100%;">
            <thead class="table-dark">
                <tr>
                    <th class="align-middle">
                        @localizer["The Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["Description"]
                    </th>
                    <th class="align-middle">
                        @localizer["Main Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["Sub Code"]
                    </th>
                    <th class="align-middle">
                        @localizer["The Description"]
                    </th>
                    <th class="align-middle"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.PostId</td>
                        <td class="align-middle">@item.ModuleN</td>
                        <td class="align-middle">@item.MainCode</td>
                        <td class="align-middle">@item.SubCode</td>
                        <td class="align-middle">@item.CodeDesc</td>
                        <td class="text-center align-middle" style="width: 325px;">
                            <a asp-action="Edit_SysAccount" asp-route-id="@item.PostId" class="btn btn-sm btn-success mb-1 fs-6" style="width: 150px">@localizer["Edit"]</a>
                            <form asp-action="Delete_SysAccount" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.PostId" />
                                <button class="btn btn-sm btn-danger mb-1 fs-6" onclick="return confirm('Are you sure you want to delete this one?')" style="width: 150px">@localizer["Delete"]</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
