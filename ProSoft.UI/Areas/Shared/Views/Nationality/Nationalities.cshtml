@model List<NationalityDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Nationalities";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}
@inject IViewLocalizer localizer

<div class="container pt-2">
    <div class="d-flex justify-content-between align-items-center mt-4 ">
        <h1 class="header">@localizer["Nationalities"]</h1>

        <a asp-controller="Nationality" asp-action="Add_Nationality" class="btn btn-sm btn-primary fs-6" style="width:150px">
            @localizer["Add Nationality"]
        </a>
    </div>
    <div class="overflow-auto" style="max-height:calc(100vh - 145px)">
        <table id="myTable" class="table table-bordered table-hover" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>
                        @localizer["Code"]
                    </th>
                    <th>
                        @localizer["Nationality Name"]
                    </th>
                    <th>
                        @localizer["Action"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nat in Model)
                {
                    <tr>
                        <td>
                            @nat.NationalityId
                        </td>
                        <td>
                            @if (isRTL)
                                 @nat.NationalityDesc
                            else
                                @nat.NationalityDescE
                        </td>
                        <td width="30%" class="text-center">
                            <a asp-controller="Nationality" asp-action="Edit_Nationality" asp-route-ID="@nat.NationalityId" class="btn btn-sm btn-success mb-1 fs-6" style="width:150px">
                                <i class="bi bi-pencil"></i> @localizer["Edit"]
                            </a>

                            <form asp-action="Delete_Nationality" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@nat.NationalityId" />
                                <button type="submit" class="btn btn-sm btn-danger mb-1  fs-6" onclick="return confirm('Are you sure you want to delete this item ?');" style="width:150px">@localizer["Delete"] </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
