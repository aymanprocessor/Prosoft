@model ClassificationViewDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Department";
    Layout = "_Layout";
}
@inject IViewLocalizer localizer

<div class="container pt-2">
    <h1 class="mt-4">@localizer["Edit Department"] : @Model.ClassificationDesc</h1>
    <form method="post" asp-action="Edit_ClassCust">
        <div class="border p-3 mt-4">

            @* Hidden Inputs *@
            <input asp-for="ClassificationCust1" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="parent d-flex align-items-md-end justify-content-center gap-3 my-mobile ">
                <div class="mb-3">
                    <label asp-for="ClassificationCust1"></label>
                    <input asp-for="ClassificationCust1" class="form-control" disabled />
                    <span asp-validation-for="ClassificationCust1" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ClassificationDesc"></label>
                    <input asp-for="ClassificationDesc" class="form-control" />
                    <span asp-validation-for="ClassificationDesc" class="text-danger"></span>
                </div>
            </div>

            <!------------------------------------------------------------------------------->

            <div class="parent d-flex justify-content-md-center gap-2">
                <button type="submit" class="btn btn-success" style="width:150px">@localizer["Save Changes"]</button>
                <a asp-controller="ClassificationCust" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    @localizer["Cancel"]
                </a>
            </div>
        </div>
    </form>
</div>
