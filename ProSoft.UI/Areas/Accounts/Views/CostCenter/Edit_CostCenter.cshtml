<div class="container pt-2" style="min-height:100vh;">
    @* <img class="image" src="/background.jpg" style="position:absolute;" /> *@

    <h1 class="mt-4">@localizer["Add Cost"]</h1>
    <form method="post" asp-action="Edit_CostCenter" id="myForm">
        <div class="border p-3 mt-4">

            <div asp-validation-summary="ModelOnly"></div>
            @* hidden *@
            <input asp-for="CostCode" type="hidden" />
            <!------------------------------------------------------------------------------->

            <div class="parent d-flex align-items-md-end justify-content-center  my-mobile gap-3 ">
                <div class="mb-3">
                    <label asp-for="CostCode"></label>
                    <input asp-for="CostCode" class="form-control" disabled  />
                    <span asp-validation-for="CostCode" class="text-danger"></span>
                </div>
                <div class="mb-3 ">
                    <label asp-for="CostDesc"></label>
                    <input asp-for="CostDesc" class="form-control" />
                    <span asp-validation-for="CostDesc" class="text-danger"></span>
                </div>
                <div class="mb-3 ">
                    <label asp-for="CostVisible"></label>
                    <select asp-for="CostVisible" class="form-control text-center">
                        <option value="1">@localizer["Yes"]</option>
                        <option value="2">@localizer["No"]</option>
                    </select>
                    <span asp-validation-for="CostVisible" class="text-danger"></span>
                </div>
            </div>

            <!------------------------------------------------------------------------------->

            <div class="parent d-flex justify-content-md-center gap-2 ">
                <button type="submit" class="btn btn-primary" style="width:150px">
                    @localizer["Save Changes"]
                </button>
                <a asp-controller="CostCenter" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    @localizer["Cancel"]
                </a>
            </div>
        </div>
    </form>
</div>
